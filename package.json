{
  "name": "roomie",
  "version": "2.0.0",
  "description": "Meeting Rooms Dashboard for Google Calendar",
  "main": "app.js",
  "repository": "https://github.com/kozhevnikov/roomie",
  "author": "Ilya Kozhevnikov <git@kozhevnikov.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .js,.vue .",
    "build": "webpack",
    "start": "node app.js",
    "watch": "npm run client & npm run server",
    "client": "webpack --watch",
    "server": "nodemon app.js"
  },
  "dependencies": {
    "convict": "^4.2.0",
    "google-auth-library": "^1.3.2",
    "googleapis": "^28.1.0",
    "koa": "^2.5.0",
    "koa-passport": "^4.0.1",
    "koa-router": "^7.4.0",
    "koa-send": "^4.1.3",
    "koa-session": "^5.8.1",
    "koa-static": "^4.0.2",
    "passport-google-oauth": "^1.0.0",
    "winston": "^3.0.0-rc3"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "babel-loader": "^8.0.0-beta.2",
    "babel-polyfill": "^7.0.0-beta.3",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "eslint": "^5.0.0-alpha.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-vue": "^4.4.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "^3.2.0",
    "luxon": "^1.0.0",
    "macy": "^2.3.0",
    "nodemon": "^1.17.3",
    "opn": "^5.3.0",
    "vue": "^2.5.17-beta.0",
    "vue-loader": "^15.0.0-beta.7",
    "vue-router": "^3.0.1",
    "vue-template-compiler": "^2.5.17-beta.0",
    "vuetify": "^1.0.13",
    "vuex": "^3.0.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "whatwg-fetch": "^2.0.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "shippedProposals": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:vue/recommended",
      "airbnb-base"
    ],
    "plugins": [
      "vue"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "never"
      ],
      "import/no-extraneous-dependencies": "off",
      "max-len": "off",
      "no-shadow": "off",
      "object-curly-newline": "off",
      "vue/attributes-order": "off",
      "vue/max-attributes-per-line": "off"
    }
  },
  "eslintIgnore": [
    "dist"
  ]
}
